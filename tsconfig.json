{
  /* Visit https://aka.ms/tsconfig to read more about this file */
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx"
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "build", "coverage", "webpack.*.js", "*.config.js", "*.test.ts*" ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
